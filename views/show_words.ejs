<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <title>しりとり</title>

    <script type="text/javascript" src="/js/show_words.js"></script>

    <link rel="stylesheet" href="/css/siritori.css">
</head>

<body>
    <div class="header">
        <p class="right">
            <a href="/">ホームへ戻る</a>
        </p>
    </div>

    <div class="main">
        <h1 id="title">単語リスト</h1>

        <div class="center">
            <p id="message"></p>

            <div id="inputeeDiv">
                <form id="form" onsubmit="submitedWord(); return false;">
                    <div>
                        <label>単語</label>
                        <input type="text" id="inputedWord" size="50">
                    </div>
                    <div>
                        <label>意味</label>
                        <input type="text" id="inputedMean" size="50">
                    </div>
                    <input type="submit" value="送信" id="myWordSubmitButton">
                </form>
            </div>
        </div>

        <div>
            <ul class="list-1-full">
                <li class="list-1-full-li">
                    <details>
                        <summary>標準単語（頭順） : <%= standardWords.length %>語</summary>
                        <ul id="wordsMap"> <% standardWordsMap.forEach((headMap, head, _wordsMap) => { %>
                            <details>
                                <summary><%= head %> : <%= headMap.size %>語</summary>
                                <ul> <% headMap.forEach((value, read, _headMap) => { %>
                                    <li> <%= value.Read %> <% if (value.Mean != '') { %> : <%= value.Mean %> <% } %> </li> <% }) %>
                                </ul>
                            </details> <% }); %>
                        </ul>
                    </details>
                </li>
            </ul>
        </div>

        <div>
            <ul class="list-1-full">
                <li class="list-1-full-li">
                    <details>
                        <summary>ユーザ単語（頭順） : <%= userWords.length %>語</summary>
                        <ul id="wordsMap"> <% userWordsMap.forEach((headMap, head, _wordsMap) => { %>
                            <details>
                                <summary><%= head %> : <%= headMap.size %>語</summary>
                                <ul> <% headMap.forEach((value, read, _headMap) => { %>
                                    <li> <%= value.Read %> <% if (value.Mean != '') { %> : <%= value.Mean %> <% } %> </li> <% }) %>
                                </ul>
                            </details> <% }); %>
                        </ul>
                    </details>
                </li>
            </ul>
        </div>
    </div>

    <div>
        <p class="right">
            maked by <a href="https://hitsujirere.github.io" target=”_blank”>HitsujiRere</a>.
        </p>
    </div>
</body>

</html>